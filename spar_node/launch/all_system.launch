<launch>
    <!-- Core -->
    <node pkg="roscore" type="roscore" name="roscore" required="true"/>

    <!-- TF2 static frames -->
    <node pkg="spar_node" type="tf2_frames.py" name="tf2_frames" output="screen"/>

    <!-- TF2 combined (ROI broadcaster) -->
    <node pkg="spar_node" type="tf2_combined.py" name="tf2_combined" output="screen"/>

    <!-- Pose estimator -->
    <node pkg="spar_node" type="pose_estimator.py" name="pose_estimator" output="screen"/>

    <!-- Servo control -->
    <node pkg="servo" type="servo_control.py" name="servo_control" output="screen"/>

    <!-- Breadcrumb planner -->
    <include file="$(find breadcrumb)/launch/breadcrumb.launch"/>

    <!-- Waypoint Guidance -->
    <node pkg="spar_node" type="demo_wp_roi.py" name="demo_wp_roi" output="screen"/>

    <!-- Optional: RViz -->
    <!-- <node pkg="rviz" type="rviz" name="rviz" args="-d $(find spar_node)/rviz/config.rviz"/> -->
</launch>
